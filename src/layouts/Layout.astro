---
import "../styles/global.css";
interface Props {
    title?: string;
    description?: string;
}
const {
    title = 'Coffee Shop',
    description = 'Fresh coffee served daily'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <meta name="description" content={description} />
        <title>{title}</title>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body class="m-0 bg-[#faf7f2] text-[#2e2a27] font-sans leading-relaxed">
        <header class="flex flex-col gap-3 items-start px-8 py-4 bg-white border-b border-[#e5ddd2] sticky top-0 z-10 md:flex-row md:items-center md:justify-between">
            <div class="font-bold text-xl tracking-wide flex items-center gap-2">
                <img src="/logo.svg" alt="Coffee Shop Logo" width="32" height="32" loading="lazy" />
                <span>Coffee Shop</span>
            </div>
            <nav aria-label="Main">
                <ul class="flex flex-wrap gap-3 m-0 p-0 list-none md:flex-nowrap md:gap-5">
                    <li><a class="font-medium px-3 py-2 rounded-lg transition-colors hover:bg-[#d4a373] hover:text-white" href="/">Home</a></li>
                    <li><a class="font-medium px-3 py-2 rounded-lg transition-colors hover:bg-[#d4a373] hover:text-white" href="/menu">Menu</a></li>
                    <li><a class="font-medium px-3 py-2 rounded-lg transition-colors hover:bg-[#d4a373] hover:text-white" href="/about">Our Story</a></li>
                    <li><a class="font-medium px-3 py-2 rounded-lg transition-colors hover:bg-[#d4a373] hover:text-white" href="/locations">Locations</a></li>
                    <li><a class="bg-[#8b5e34] text-white px-4 py-2 rounded-lg font-semibold transition-colors hover:bg-[#714a27]" href="/order">Order Now</a></li>
                </ul>
            </nav>
        </header>

        <main class="max-w-[1200px] mx-auto min-h-[60vh] py-8 px-6 pb-12">
            <slot />
        </main>

        <footer class="bg-white border-t border-[#e5ddd2] py-8 px-6 text-center text-sm">
            <p>&copy; {new Date().getFullYear()} Coffee Shop. All rights reserved.</p>
            <p><small>Crafted with Astro.</small></p>
        </footer>
    </body>
</html>
