---
import Logo from "@/assets/logo.svg";
import MainNav from "./MainNav.astro";
interface Props {
    title: string;
    subtitle?: string;
    bgImage: string;
}
const { title, subtitle, bgImage } = Astro.props;
---

<header class="min-h-72 relative pb-72">
    <div
        class="inset-0 absolute bg-center bg-cover"
        style={`background-image: url(${bgImage});`}
    >
    </div>

    <div class="inset-0 absolute bg-black/50"></div>
    <div
        class="relative max-w-7xl mx-auto py-5 "
    >
     <div class="flex flex-col lg:flex-row items-center justify-around gap-5">
          <a href="/" class="flex items-center gap-3">
         <Logo class="w-72" />
         </a>
        <MainNav />
     </div>
     <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-center mt-12 text-white drop-shadow-lg">
        {subtitle}
    </div>    
</header>
